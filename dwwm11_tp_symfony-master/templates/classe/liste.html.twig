{% extends 'gabarit_liste.html.twig' %}

{% block thead %}
	<th>Nom</th>
	<th>Niveau</th>
	<th>Nb. d'élèves</th>
	<th>Prof. principal</th>
{% endblock %}

{% block tbody %}
	{% for classe in classes %}
		<tr>
			<td>{{ classe.nom }}</td>
			<td>{{ classe.niveau }}</td>
			<td>{{ classe.eleves.count() }}</td>
			<td>{{ classe.professeurPrincipal.getDisplayedName() }}</td>
			<td></td>
		</tr>
	{% endfor %}
{% endblock %}