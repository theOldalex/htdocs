<html>
{% include 'head.html' %}
	<body>

		<header>
			{% include 'nav.html.twig' %}
            </header>
{% block title %}{% endblock %}

{% block body %}


<h1 class="text-center py-4">{{article.titre}}</h1>
<div class="container">
  <img src="{{ article.image }}" width="100%" height="600">
  
    <p class="text-center py-4">{{article.contenu|raw}}</p>>
    <p class="text-center py-4">Publié le {{article.datePublication ? article.datePublication|date('d-m-Y')}} par {{ article.auteur.prenom }}</p>
  

  <h1 class="text-center py-4">Tous les commentaires</h1>



{% if app.user %}
    <h2 class="text-center py-4">Ajouter un commentaire</h2>
    {{ form(commentForm) }}
 {% else %}
    <p class="text-center py-4">Vous devez vous <a href="{{ path('app_login') }}">connecter</a> pour laisser un commentaire</p>
 {% endif %}
</div>

<div class="container py-4">
    <a class="btn btn-secondary btn-sm" href="{{ path('article') }}">Retourner à la liste</a>
 {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-info btn-sm" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>

    {{ include('article/_delete_form.html.twig') }}
    {% endif %}
    </div>
  
{% endblock %}


</body>
</html>
