<html>
	{% include 'head.html' %}
	<body>

		<header>
			<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.3.4/dist/css/axentix.min.css">

			{% include 'nav.html.twig' %}
		</header>


		<main>

			{% block body %}
				<div class="grix xs4 container">
					{% for message in app.flashes('message') %}
						<div class="col-xs4">
							<div class="p-3 my-2 rounded-2 success">{{message}}</div>
						</div>
					{% endfor %}
					<div class="col-xs4">
						<h1 class="py-4">Profil de
							{{ app.user.prenom }}
							{{ app.user.nom }}</h1>
					</div>
					<div class="col-xs3">
						<div class="col-xs1">Pr√©nom:
						</div>
						<div class="col-xs3">{{ app.user.prenom }}</div>
						<div class="col-xs1">Nom:
						</div>
						<div class="col-xs3">{{ app.user.nom }}</div>
						<div class="col-xs1">Email:</div>
						<div class="col-xs3">{{ app.user.email }}</div>
						<div class="col-xs4">
							<a class="btn shadow-1 rounded-1 small success uppercase" href="{{ path('profil_edit') }}">Modifier mon profil</a>
							<a class="btn shadow-1 rounded-1 small warning uppercase" href="{{ path('pass_edit') }}">Modifier mon mot de passe</a>
						</div>
						<div class="col-xs4">
						<h1 class="py-4">Favoris de
							{{ app.user.prenom }}
							{{ app.user.nom }}</h1>

							{% for article in app.user.favoris %}
						<div class="col-xs1">Titre :
						<div class="col-xs3">{{ article.titre}}</div>

						{% endfor %}
					</div>
					</div>
				</main>
				<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
				<script>
					window.jQuery || document.write('<script src="../assets/js/vendor/jquery.slim.min.js"><\/script>')
				</script>
				<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
				<script src="dashboard.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/axentix@1.3.4/dist/js/axentix.min.js"></script>
			{% endblock %}
		</body>
	</body>
</html>
