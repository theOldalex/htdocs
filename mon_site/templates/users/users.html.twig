<html>
	{% include 'head.html' %}
	<body class="users-card">

		<header>
			<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">

			{% include 'nav.html.twig' %}
		</header>


		<main>

			{% block body %}
				{% for message in app.flashes('message') %}
					<div class="alert alert-success">
							{{message}}
						</div>
				{% endfor %}
				<div class="card" style="width: 45rem;">
					<div class="card-body">
					{% if app.user.avatar %}
				<img src="{{ asset(app.user.avatar) }}" class="card-img-top" alt="votre avatar" id="user-avatar">
				 
				 {% else %}
				<img src="{{ asset('avatar.png') }}" class="card-img-top" alt="votre avatar" id="user-avatar">
				{% endif %}
						<h5 class="card-title text-center">{{app.user.prenom}}
							{{app.user.nom}}</h5>
						<ul class="list-group list-group-flush">
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">Pr√©nom:</h6>
								<span class="text-secondary">{{app.user.prenom}}</span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">Nom:</h6>
								<span class="text-secondary">{{app.user.nom}}</span>
							</li>
							<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
								<h6 class="mb-0">Email:</h6>
								<span class="text-secondary">{{app.user.email}}</span>
							</li>
						</ul>

						<h5 class="py-4 text-center">Favoris</h5>

							{% for article in app.user.favoris %}
							<ul class="list-group list-group-flush">
								<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap"></li>
								<h6 class="mb-0">Titre de l'article:</h6>
									<a href="{{ path('article_show', {'slug': article.slug}) }}"><span class="text-secondary">{{ article.titre}}</span></a>
							</ul>
								{% endfor %}
							</div>

							<div class="card-body">
								<a href="{{ path('profil_edit') }}" class="btn btn-sm card-link btn-success">Modifier mon profil</a>
								<a href="{{ path('pass_edit') }}" class="btn btn-sm card-link btn-warning">Modifier mon mot de passe</a>
							</div>
						</div>
					</main>
					<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
					<script>
						window.jQuery || document.write('<script src="../assets/js/vendor/jquery.slim.min.js"><\/script>')
					</script>
					<script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
					<script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
					<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
					<script src="dashboard.js"></script>
					<script src="https://cdn.jsdelivr.net/npm/axentix@1.3.4/dist/js/axentix.min.js"></script>
				{% endblock %}
			</body>
		</body>
	</body>
</html></body></html>
